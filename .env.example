# Microsoft Fabric Embedded App - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# AZURE CONFIGURATION
# =============================================================================

# Azure Subscription and Resource Group
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=rg-fabric-embedded-app
AZURE_LOCATION=westus3

# =============================================================================
# ENTRA ID (AZURE AD) CONFIGURATION
# =============================================================================

# Tenant Information
ENTRA_TENANT_ID=your-tenant-id-here
ENTRA_DOMAIN=yourdomain.onmicrosoft.com

# Frontend Application (SPA)
FRONTEND_CLIENT_ID=your-frontend-app-client-id-here

# Backend Application (Service Principal)
BACKEND_CLIENT_ID=your-backend-app-client-id-here
BACKEND_CLIENT_SECRET=your-backend-app-client-secret-here

# =============================================================================
# MICROSOFT FABRIC CONFIGURATION
# =============================================================================

# Fabric Capacity
FABRIC_CAPACITY_ID=your-fabric-capacity-id-here
FABRIC_CAPACITY_NAME=your-fabric-capacity-name-here

# Fabric Workspace
FABRIC_WORKSPACE_ID=your-workspace-id-here
FABRIC_WORKSPACE_NAME=your-workspace-name-here

# PowerBI Dataset and Reports
FABRIC_DATASET_ID=your-dataset-id-here
FABRIC_REPORT_ID=your-report-id-here

# =============================================================================
# AZURE KEY VAULT
# =============================================================================

KEY_VAULT_URL=https://your-keyvault-name.vault.azure.net/
KEY_VAULT_NAME=your-keyvault-name

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true

# URLs (for production deployment)
FRONTEND_URL=https://your-app-frontend.azurewebsites.net
BACKEND_URL=https://your-app-backend.azurewebsites.net

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Local development URLs
VITE_API_BASE_URL=http://localhost:8000
VITE_FRONTEND_URL=http://localhost:5173

# Database (if needed)
DATABASE_URL=your-database-connection-string-here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Origins
ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend-domain.com

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string-here

# Logging Level
LOG_LEVEL=INFO

# =============================================================================
# POWERBI SPECIFIC CONFIGURATION
# =============================================================================

# PowerBI API URLs
POWERBI_API_URL=https://api.powerbi.com/v1.0/myorg
FABRIC_API_URL=https://api.fabric.microsoft.com/v1

# Token refresh settings
TOKEN_REFRESH_THRESHOLD_MINUTES=5
EMBED_TOKEN_EXPIRATION_MINUTES=60

# =============================================================================
# OPTIONAL: ADDITIONAL SERVICES
# =============================================================================

# Redis (for caching, if implemented)
REDIS_URL=redis://localhost:6379

# Email notifications (if implemented)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-email-password

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================

# Docker configuration
DOCKER_REGISTRY=your-registry.azurecr.io
DOCKER_IMAGE_TAG=latest

# Managed Identity (for Azure deployment)
MANAGED_IDENTITY_CLIENT_ID=your-managed-identity-client-id-here

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Never commit the actual .env file to version control
# 2. Use Azure Key Vault for production secrets
# 3. For local development, you can use this file as .env
# 4. Make sure to update the GitHub Secrets for CI/CD pipeline
# 5. Some values will be auto-generated during deployment
#